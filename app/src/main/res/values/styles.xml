<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" />

    <style name="Text.Title">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Title.Bold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title.Medium">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Subtitle.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Subtitle.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subtitle.Medium.Special">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Text.Subtitle.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Subtitle.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subtitle.Large.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/primary_button_color</item>
    </style>

    <style name="Button.Medium">
        <item name="android:textAppearance">@style/Text.Subtitle.Medium</item>
    </style>

    <style name="Button.Large">
        <item name="android:textAppearance">@style/Text.Subtitle.Large</item>
    </style>

    <style name="Button.Icon" parent="Widget.Material3.Button.Icon" />

    <style name="Button.Icon.Medium">
        <item name="android:textAppearance">@style/Text.Subtitle.Medium</item>
    </style>

    <style name="Button.Icon.Large">
        <item name="android:textAppearance">@style/Text.Subtitle.Large</item>
    </style>
</resources>