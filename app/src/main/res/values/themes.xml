<resources>

    <style name="Theme.AndroidChallenge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimaryVariant3</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/Theme.AndroidChallenge.Toolbar</item>
        <item name="materialCardViewStyle">@style/Theme.AndroidChallenge.Card</item>
    </style>

    <style name="Theme.AndroidChallenge.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/size_general</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
    </style>

    <style name="Theme.AndroidChallenge.Card" parent="Widget.Material3.CardView.Outlined">
        <item name="android:clickable">true</item>
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>
</resources>